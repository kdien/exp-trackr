@model ExpTrackr.Models.Category

@{
    ViewData["Title"] = "New Category";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" class="mb-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-row">
                <div class="col-10">
                    <input asp-for="CategoryName" class="form-control" />
                    <span asp-validation-for="CategoryName" data-valmsg-replace="true" class="text-danger">@ViewData["DuplicateNameErrorMessage"]</span>
                </div>
                <div class="col">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-plus"></i>
                    </button>
                </div>
            </div>
            <input type="hidden" asp-for="UserID" value="@ViewData["UserID"]" />
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-light">Cancel</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
